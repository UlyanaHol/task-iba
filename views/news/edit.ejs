<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= news.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/news/<%= news._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="news[name]" value="<%= news.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="news[image]" value="<%= news.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="news[description]" value="<%= news.description %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="news[category]" value="<%= news.category %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/news">Go Back</a>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>